@using WebGallery.Models.Statistics
@using WebGallery.Models.Statistics.HelpStructs

@model IEnumerable<PageCount>
@{
    ViewData["Title"] = "Самые посещаемые страницы";

    int place = 1;
}

<table>
    <tr>
        <td>Место</td>
        <td>Страница</td>
        <td>Число посещений</td>
    </tr>
    @foreach(var visit in Model)
    {
        <tr>
            <td>@place</td>
            <td>@visit.Page.Path</td>
            <td>@visit.Count</td>
        </tr>

        place++;
    }
</table>